<% layout('layouts/boilerplate') %>
    <!-- <div id="map" style="width:100%;height:555px"> -->
    <div class="mb-5"id="cluster-map">

    </div>
    <h1 class="mb-5 text-center">All Campgrounds</h1>
    
    <% for (let campground of campgrounds){ %>
        <div class="card mb-3">
            <div class="row ">
                <div class="col-md-4">
                    <% if (campground.image.length){%>
                        <img class="img-fluid  rounded " src="<%=campground.image[0].url%> " alt="">
                        <% }else{ %>
                            <img class="img-fluid  rounded "
                                src="https://res.cloudinary.com/dxhcqc4kz/image/upload/v1637457098/YelpCamp/wq7tgpa57q3e1dcatsiu.jpg"
                                alt="">
                            <% } %>
                </div>
                <div class="col-md-7">
                    <div class="card-body">
                        <h5 class="card-title text-danger    ">
                            <%=campground.title%>
                        </h5>
                        <!-- <h2><%=campground.properties.popupMarkup%> </h2> -->
                        <p class="card-text">
                            <%=campground.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=campground.location%>
                            </small>
                        </p>
                        <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">view <%=campground.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
        <script>
            const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
            // const campgrounds = '<%-JSON.stringify(campgrounds)%>';
            const campgrounds ={features: <%-JSON.stringify(campgrounds)%>};
        </script>
