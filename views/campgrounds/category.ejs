<%-layout('layouts/boilerplate') %>

  <div class=" mt-0 pt-3 bg-dark text-light rounded py-2 mb-2 ">
    <h5 class="text-center "><%if(cat.length){ %>    <%=cat.length%> Places under the category  <b><%=category%></b><% } else{%>No matches found <% } %>  
    </h3>
  </div>

  <div class="row  gy-2 gx-3">
    <% for (let c of cat){ %>
      <div class="my-3  col-sm-6">
        <div class="card  shadow"> <img src="<%=c.image[0].url%> " class="card-img-top" alt="...">
          <div class="card-body bg-dark  text-light bg-light  ">
            <h5 class="card-title  text-decoration-bold text-center">
              <%=c.title%>
            </h5>
            <p class="card-text ">
              <%=c.description%>
            </p>
            <div class="d-flex justify-content-center"> <a href="/campgrounds/<%=c._id%> "
                class="btn btn-outline-warning">Details</a></div>
          </div>
        </div>
      </div>

      <% } %>
  </div>