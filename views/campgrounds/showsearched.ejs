<%-layout('layouts/boilerplate') %>

  <div class=" mt-0 bg-light rounded py-2 mb-2 text-dark">
    <h3 class="text-center "><%if(campgrounds.length){ %>    <%-campgrounds.length%>  matches found for <b><%=searchterm%></b><% } else{%>No matches found <% } %>  
    </h3>
  </div>

  <div class="row  gy-2 gx-5">
    <% for (let campground of campgrounds){ %>
      <div class="my-3  col-sm-6">
        <div class="card shadow"> <img src="<%=campground.image[0].url%> " class="card-img-top" alt="...">
          <div class="card-body  bg-light  ">
            <h5 class="card-title  text-decoration-bold text-center">
              <%=campground.title%>
            </h5>
            <p class="card-text ">
              <%=campground.description%>
            </p>
            <div class="d-flex justify-content-center"> <a href="/campgrounds/<%=campground._id%> "
                class="btn btn-primary">Details</a></div>
          </div>
        </div>
      </div>

      <% } %>
  </div>