<% layout('layouts/boilerplate')%>
    <div class="card mt-4 mb-3" style="max-width: 1540px;">
        <div class="row ">
            <div class="d-flex align-items-center justify-content-center col-md-6 ">
                <img src="https://media.istockphoto.com/photos/taj-mahal-india-picture-id450164569?k=20&m=450164569&s=612x612&w=0&h=4wOUHFngaGSDTQlCZoyv1Ck3DtTtKsnm7WSuordUJW0="
                    class="shadow rounded img-fluid rounded-start" alt="...">
                <!-- <img  src="https://cdn.pixabay.com/photo/2019/11/08/09/27/panorama-4610864_960_720.jpg"  class=" img-fluid rounded-start" alt="..."> -->
            </div>
            <div class="col-md-6">
                <div class=" mt-5 card-body">
                    <h3 class="card-title text-center"><b>Login</b></h3>
                    <form action="/login" method="POST" class="validated-form" novalidate>
                        <div class="mb-3 mt-3">
                            <label class="form-label mb-3" for="username"><i class="fas fa-fire-alt"></i> Username</label>
                            <input class="form-control    " type="text" id="username" name="username" autofocus
                                required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label mb-3" for="password"><i class="fas fa-fire-alt"></i> Password</label>
                            <input class="form-control " type="password" id="password" name="password" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                        </div>

                        <div class="d-grid gap-2 ">
                            <button class=" mt-3 btn btn-lg btn-dark rounded-pill shadow"><i class="fas fa-fire-alt"></i> Login</button>

                        </div>
                        <p class="text-center mt-4">Dont have account ?<a href="/register"> Create account</a></p>


                    </form>
                </div>
            </div>
        </div>
    </div>

