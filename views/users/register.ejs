 
    <% layout('layouts/boilerplate')%>
    <div class="card mt-4 mb-3" style="max-width: 1540px;">
        <div class="row ">
          
          <div class="col-md-6">
            <div class="   card-body">
                <h3 class="card-title text-center mt-3 mb-3"><b>Sign Up</b></h3>
                <form action="/register" method="POST" class="validated-form" novalidate>
                    <div class="mb-3 mt-3">
                        <label class="form-label  ms-3" for="username"><i class="fas fa-fire-alt"></i> Username</label>
                        <input class="form-control text-center rounded-pill " type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label ms-3" for="email"><i class="fas fa-fire-alt"></i> Email</label>
                        <input class="form-control text-center rounded-pill " type="email" id="email" name="email" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter valid email
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label  ms-3" for="password"><i class="fas fa-fire-alt"></i> Password</label>
                        <input class="form-control text-center rounded-pill " type="password" id="password" name="password" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                   
                    <div class="d-grid gap-2 ">
                        <button class=" mt-3 btn btn-lg btn-dark rounded-pill shadow " ><i class="fas fa-fire-alt"></i>
                            Sign Up</button>
    
                    </div>
                    <p class="text-center mt-3">Already have an account ?<a href="/login"> Login here</a></p>
                    
                   
                </form>
            </div>
          </div>
          <div class="d-flex align-items-center justify-content-center col-md-6 ">
            <img src="https://cdn.pixabay.com/photo/2016/11/22/22/21/adventure-1850912_960_720.jpg"
                alt="" class=" card-img-top" />
        </div>
        </div>
      </div>




    